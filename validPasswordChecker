def validPasswordCheck(password: str):
    lengthPass = len(password)
    specialChar = False
    number = False
    lowerCase = False
    upperCase = False
    lowestNumber = 13
    highestNumber = 25

    if(lengthPass < lowestNumber or lengthPass > highestNumber):
        return False

    if(allowedSpecialChar(password[0])):
        specialChar = True
    if(password[0].isnumeric()):
        number = True
    if(password[0].islower()):
        lowerCase = True
    if(password[0].isupper()):
        upperCase = True


    for i in range(0, len(password)-1): 
        if(password[i].isnumeric() and password[i+1].isnumeric()):
                diff = int(password[i]) - int(password[i+1])
                if(diff == -1 or diff == 0 or diff == 1):
                    return False
        if(allowedSpecialChar(password[i+1])):
            specialChar = True
        if(password[i+1].isnumeric()):
           number = True
        if(password[i+1].islower()):
            lowerCase = True
        if(password[i+1].isupper()):
            upperCase = True
        if(specialChar and number and lowerCase and upperCase):
            return True
    return False

def allowedSpecialChar(charToCheck: chr):
    if(charToCheck == '!' or charToCheck == '@' or charToCheck == '#' or charToCheck == '$' or charToCheck == '%' or charToCheck == '&' or charToCheck == '*' or charToCheck == '(' or charToCheck == ')'):
        return True
    return False

#print(validPasswordCheck("DlGkS!2#4%6&8(0"))
#The valid password requires at least one special character from (!@#$%&*()), and at least one number, and at least one lower case letter and at least one uppercase letter.
#The valid password should not have two numeric value in either descending or ascending order or two same numeric values in a row. (This needs to be fixed.)
